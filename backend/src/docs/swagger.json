{
    "openapi": "3.0.1",
    "info": {
        "title": "blogging-escola",
        "version": "1.0.1",
        "description": "API para gerenciamento de Posts de  uma escola com autetnticação e permissionamento."
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "tags": [
        {
           "name": "Auth",
           "description": "Autenticação e registro" 
        },
        {
            "name": "Posts",
            "description": "Leitura e Gestão de posts"
        }
    ],
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrar novo usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário criado"
                    },
                    "400": {
                        "description": "Erro de validação ou usuário existente"
                    }
                }
            }
        },
        "/auth/login":{
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Realizar login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginInput"
                            }
                        }
                    }
                },
                "responses":{
                    "200": {
                        "description": "Login com sucesso, retorna token"
                    },
                    "400": {
                        "description": "Credenciais Inválidas"
                    }
                }
            }
        },
        "/posts": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "Listar Posts",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de Posts",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Post"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                       "description": "Não autorizado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "Criar post (apenas professor)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Post criado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao criar"
                    },
                    "401": {
                        "description":"Não autorizado"
                    },
                    "403": {
                        "description": "Apenas Professor"
                    }
                }
            }
        },
        "/posts/search": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "Buscar posts por texto",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": true,
                        "schema":{
                            "type": "string"
                        },
                        "description": "Texto para a busca"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Resultados da busca!"
                    },
                    "400": {
                        "description": "Parâmetro ausente"
                    },
                    "401": {
                        "description":"Não autorizado"
                    }
                }
            }
        },
        "/posts/{id}": {
            "get":{
                "tags": [
                    "Posts"
                ],
                "summary": "Obter post por ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters":[
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Post encontrado"
                    },
                    "400": {
                        "description": "ID inválido"
                    },
                    "404": {
                        "description": "Post não encontrado"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                }
            },
            "put": {
                "tags":[
                    "Posts"
                ],
                "summary":"Atualizar post (apenas professor)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                        "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Post atualizado"
                    },
                    "400": {
                        "description": "Erro ao atualizar"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "403": {
                        "description": "Apenas professor"
                    },
                    "404": {
                        "description": "Post não encontrado"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Posts"
                ],
                "summary": "Remover post (apenas professor)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Removido"
                    },
                    "400": {
                        "description": "Erro ao remover"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "403": {
                        "description": "Apenas professor"
                    },
                    "404": {
                        "description": "Post não encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "RegisterInput": {
                "type": "object",
                "required": [
                    "nome",
                    "email",
                    "senha"
                ],
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "senha": {
                        "type": "string",
                        "format": "password"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "professor",
                            "aluno"
                        ],
                        "default": "aluno"
                    }
                }
            },
            "LoginInput": {
                "type": "object",
                "required": [
                    "email",
                    "senha"
                ],
                "properties":{
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "senha": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "PostInput": {
                "type": "object",
                "required": [
                    "titulo",
                    "conteudo"
                ],
                "properties":{
                    "titulo": {
                        "type": "string"
                    },
                    "conteudo": {
                        "type": "string"
                    },
                    "autor": {
                        "type": "string"
                    }
                }
            },
            "Post": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/PostInput"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "_id": {
                                "type": "string"
                            },
                            "dataCriacao": {
                                "type": "string",
                                "format": "date-time"
                            }
                        }
                    }
                ]
            }
        }
    }        
    
}